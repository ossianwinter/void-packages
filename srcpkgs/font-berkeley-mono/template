do_install() {
	vmkdir usr/share/fonts/OTF
	vcopy "$FILESDIR/OTF/*.otf" usr/share/fonts/OTF

	vmkdir usr/share/fonts/TTF
	vcopy "$FILESDIR/Variable/*.ttf" usr/share/fonts/TTF
}
